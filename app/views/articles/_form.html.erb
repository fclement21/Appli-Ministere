<div class="form-new-edit-article">
<%= form_for(@article, :url => [@article.section,@article] ) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
    <div class="field">
      <%= f.label :resume %><br>
      <%= f.text_area :resume, :class => 'resume-area markitup' %><br>
    </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => 'content-area markitup markItUpEditor2'%>
  </div>
  <div class="field">
  <%= f.label :Illustrations %><br />
  <%= f.file_field :image %>
</div>
  <div class="actions">
    <%= f.submit 'Creer un article', :class => "btn btn-primary submit-form"   %>
  </div>

<% end %>
</div>










